<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="well well-sm">
                <form class="form-horizontal" action="/api/product" method="post">
                    <fieldset class="centro">
                        <legend class="text-center header">Registrar productos en la base de datos.</legend>
                        <div class="ol form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="fname" name="name" type="text" placeholder="Name" class="form-control">
                            </div>
                        </div>
                        <div class="ol form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-user bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="fprice" name="price" type="number" placeholder="Price" class="form-control">
                            </div>
                        </div>

                        <div class="ol form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-envelope-o bigicon"></i></span>
                            <div class="col-md-8">
                            	<label for="lg_category" class=" form-control sr-only"> <b>Category</b></label>
                                <select class="form-control" id="lg_price" name="category">            
                                    <option>Computers</option>
                                    <option>Phones</option>
                                    <option>Accesories</option>
                                </select>
                            </div>      
                        </div>

                        <div class="ol form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone-square bigicon"></i></span>
                            <div class="col-md-8">
                                <input id="picture" name="picture" type="text" placeholder="Link of the picture" class="form-control">
                            </div>
                        </div>

                        <div class="ol form-group">
                            <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-pencil-square-o bigicon"></i></span>
                            <div class="col-md-8">
                                <textarea class="form-control" id="description" name="description" placeholder="Enter your description" rows="7"></textarea>
                            </div>
                        </div>

                        <div class="il form-group">
                            <div class="col-md-9 text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>